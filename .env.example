# Firebase Configuration
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-app-id

# Telegram Bot (для уведомлений, опционально)
VITE_TELEGRAM_BOT_TOKEN=your-bot-token
VITE_TELEGRAM_CHAT_ID=your-chat-id

# Тематические фото для карточек услуг (можно использовать один или оба)

# Yandex Search API (рекомендуется: русскоязычные запросы, тематические фото)
# Регистрация: https://yandex.cloud → Search API → Api-Key
VITE_YANDEX_SEARCH_API_KEY=your-yandex-search-api-key

# Unsplash API (запасной вариант, если нет ключа Яндекса)
# Получить ключ: https://unsplash.com/developers → New Application → Access Key
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key